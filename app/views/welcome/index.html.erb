<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.js
"></script>

<div> 

<div id="myDiv1">
<canvas id="myChart" width="100" height="100"></canvas>
</div>

<script>

var ctx = document.getElementById('myChart').getContext('2d');
var myChart = new Chart(ctx, {
    type: 'bar',
    data: {
        labels: ['Friendly', 'FIFA World Cup Q', 'British Championship', 'Copa Am√©rica', 'UEFA Euro Q', 'Merdeka', "FIFA World Cup", "Nordic Cup", "International Cup", "CCCF"],
        datasets: [{
            label: 'Number of Games',
            data: ["5260","919","459","407","381","342","270","246","127","123",],
            backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                'rgba(75, 192, 192, 0.2)',
                'rgba(153, 102, 255, 0.2)',
                'rgba(255, 159, 64, 0.2)'
            ],
            borderColor: [
                'rgba(255, 99, 132, 1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(255, 159, 64, 1)'
            ],
            borderWidth: 1
        }]
    },
    options: {
        scales: {
            yAxes: [{
                ticks: {
                    beginAtZero: true
                }
            }]
        }
    }
});
</script>

<div style="padding:30px">
<h3>Top 10 Most Frequent Tournament Types</h3>
<table>
    <tr>
